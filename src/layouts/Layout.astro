---
import Search from "../components/Search";
import "./Layout.css"
import Sidebar from "./Sidebar";
import TabBar from "./Tabbar";
import { THEME_COOKIE } from "../components/hooks/useTheme";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | chrisdmacrae.com</title>

    <script is:inline define:vars={{ THEME_COOKIE }}>
      const theme = localStorage.getItem(THEME_COOKIE)
  
      document.documentElement.className = theme;
    </script>
	</head>
	<body class="antialiased">
    <TabBar.Layout sm>
      <Search client:idle />
      <TabBar client:load />
      <Sidebar.Layout>
        <Sidebar>
          <slot name="sidebar" />
          <Sidebar.Footer />
        </Sidebar>
        <Sidebar.Pane>
      		<slot />
        </Sidebar.Pane>
      </Sidebar.Layout>
    </TabBar.Layout>
	</body>
</html>
